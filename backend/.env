# App
APP_NAME=Fanbase Platform
APP_VERSION=1.0.0
DEBUG=True

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=yourflace
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=yourFlace
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=fanbase

# Cloudflare R2 (개발용 더미값)
CLOUDFLARE_R2_ACCESS_KEY=dev
CLOUDFLARE_R2_SECRET_KEY=dev
CLOUDFLARE_R2_BUCKET=dev
CLOUDFLARE_R2_ENDPOINT=http://localhost:9000
CLOUDFLARE_R2_PUBLIC_URL=http://localhost:9000/dev

# JWT
JWT_SECRET=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth (개발용 더미값)
OAUTH_GOOGLE_CLIENT_ID=dev
OAUTH_GOOGLE_CLIENT_SECRET=dev
OAUTH_KAKAO_CLIENT_ID=dev
OAUTH_KAKAO_CLIENT_SECRET=dev
OAUTH_NAVER_CLIENT_ID=dev
OAUTH_NAVER_CLIENT_SECRET=dev

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost"]
